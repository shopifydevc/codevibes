# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# Database configuration
DB_PATH=./data/codevibes.db

# Authentication (JWT)
# Generate a secure secret using: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_random_string
SESSION_DURATION_DAYS=7

# Encryption (for storing sensitive tokens)
# MUST be exactly 32 caracters for AES-256-CBC
# Generate using: openssl rand -hex 16
ENCRYPTION_KEY=12345678901234567890123456789012

# GitHub OAuth App
# Create at: https://github.com/settings/applications/new
# Callback URL: http://localhost:5173/auth/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5173/auth/callback
FRONTEND_URL=http://localhost:5173

# AI Service (DeepSeek)
# Get key at: https://platform.deepseek.com
DEEPSEEK_API_KEY=sk-your_deepseek_api_key
DEEPSEEK_MODEL=deepseek-chat

# Logging
LOG_LEVEL=info

# Analysis Limits
MAX_FILES_PER_PRIORITY=20
